<%- include("../partials/header") %>

<div class="container text-center">
	<h1>Edit <%= campground.name %></h1>
</div>

 <div class="row justify-content-center">
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" style="width : 40%; margin: 18px auto;">
		<div class="form-group ">
			<input type="text" class="form-control" value="<%= campground.name %>" name="campground[name]">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" value="<%= campground.image %>" name="campground[image]">	
		</div>
		<div class="form-group">
		  <textarea class="form-control" rows="3" name="campground[description]"><%= campground.description %></textarea>
		</div>
		<div class="row justify-content-center">
				<button class="btn btn-info btn-lg my-2" style="width: 94%">Submit</button>
		</div>
		<a href="/campgrounds/<%= campground._id %>">Go back</a>
	</form>
</div>  

<%- include("../partials/footer") %>