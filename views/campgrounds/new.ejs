<%- include("../partials/header") %>

 <div class="row justify-content-center">
	<form action="/campgrounds" method="POST">
		<h1>Create a new Campground</h1>
		<div class="form-group mt-4">
			<input type="text" class="form-control" id="formGroupExampleInput" placeholder="Name" name="name">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Image URL" name="image">	
		</div>
		<div class="form-group">
		  <textarea class="form-control" rows="3" placeholder="Description" name="description"></textarea>
		  <button class="btn btn-primary btn-lg btn-block my-3">Submit</button>	
		</div>
		<a href="/campgrounds">Go back</a>
	</form>
</div>  

