<%- include("../partials/header") %>

<div class="container text-center">
	<h1>Create a new Campground</h1>
</div>

 <div class="row justify-content-center">
	<form action="/campgrounds" method="POST" style="width : 40%; margin: 18px auto;">
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Name" name="name">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Image URL" name="image">	
		</div>
		<div class="form-group">
		  <textarea class="form-control" rows="3" placeholder="Description" name="description"></textarea>
		  <button class="btn btn-info btn-lg btn-block my-3">Submit</button>	
		</div>
		<a href="/campgrounds">Go back</a>
	</form>
</div>  

<%- include("../partials/footer") %>